<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- textview -->
    <style name="appTextDefault">
        <item name="android:textColor">@color/black</item>
        <item name="android:freezesText">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="appTextTitle" parent="appTextDefault">
        <item name="android:textSize">@dimen/app_text_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="appTextDef" parent="appTextDefault">
        <item name="android:textSize">@dimen/app_text_def</item>
    </style>

    <style name="appTextDetail" parent="appTextDefault">
        <item name="android:textSize">@dimen/app_text_detail</item>
    </style>

    <style name="appTextSupDetail" parent="appTextDefault">
        <item name="android:textSize">@dimen/app_text_sup_detail</item>
    </style>

</resources>